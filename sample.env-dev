# Add sample file for ENVIRONMENT variables
# Copy to .env-dev and change values as needed

PROJECT_NAME=3DBionotes
APP_NAME=BWS
IMAGE_NAME=bcu/bws-dev
ENVIRONMENT=DEVELOPMENT

USER_NAME=bioinfo
USER_UID=1234

APP_EXT_PORT=8080

PATH_DATA=/data
PATH_TOOLS=/tools

SECRET_KEY='PrUeBaS'
DEBUG=True # Change to False for PROD instance

### ElasticSearch related env variables
# Elastic host
ES_HOST=es01
# Password for the 'elastic' user (at least 6 characters)
ES_PASSWD=change.me
# Version of Elastic products
STACK_VERSION=8.7.1
# Set the cluster name
CLUSTER_NAME=es-cluster
# Set to 'basic' or 'trial' to automatically start the 30-day trial
LICENSE=basic
#LICENSE=trial
# Port to expose Elasticsearch HTTP API to the host
ES_PORT=9200
# Increase or decrease based on the available host memory
ES_MEM_LIMIT=4G
ES_JAVA_OPTS='-Xms3g -Xmx3g'

# Network between BWS and Elasticsearch
NETWORK_NAME=bws-network

# Set the memory limit for the BWS container
BWS_MEM_LIMIT=4G